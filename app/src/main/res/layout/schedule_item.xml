<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/schedule_daytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/sun"
            android:text="00:00"
            android:textColor="#000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/schedule_nighttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/schedule_daytime"
            android:drawableLeft="@drawable/moon"
            android:text="00:00"
            android:textColor="#000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/schedule_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_daytime"
            android:layout_marginLeft="8dp"
            android:text=""
            android:textSize="12sp" />

        <Switch
            android:id="@+id/schedule_switch"
            style="@style/SwitchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:checked="true"
            android:gravity="end" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
