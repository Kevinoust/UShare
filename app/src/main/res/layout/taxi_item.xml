<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_taxiItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/taxi_item" />

        <ImageView
            android:id="@+id/passenger_taxiItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/passenger" />

        <ImageView
            android:id="@+id/gender_taxiItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/passenger_taxiItem"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/hostText_taxiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:text="[NAME]"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/hostText_taxiItem"
            android:text=" 's RideShare"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vacancy_taxiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passenger_taxiItem"
            android:layout_centerHorizontal="true"
            android:text="@string/remain"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vacancyText_taxiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passenger_taxiItem"
            android:layout_toEndOf="@id/vacancy_taxiItem"
            android:text="[##]"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/genderText_taxiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/gender_taxiItem"
            android:layout_below="@+id/img_taxiItem"
            android:text="@string/menOnly"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fromText_taxiItem"
            android:layout_alignBottom="@+id/fromText_taxiItem"
            android:layout_alignParentStart="true"
            android:text="From: "
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromText_taxiItem"
            android:text="To: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fromText_taxiItem"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="130dp"
            android:lines="2"
            android:text="[From..........................] " />

        <TextView
            android:id="@+id/toText_taxiItem"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fromText_taxiItem"
            android:layout_below="@+id/fromText_taxiItem"
            android:lines="2"
            android:text="[To..............................] " />

        <TextView
            android:id="@+id/dateTime_taxiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toText_taxiItem"
            android:text="DateTime: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateTimeText_taxiItem"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dateTime_taxiItem"
            android:layout_alignBottom="@+id/dateTime_taxiItem"
            android:layout_alignStart="@+id/toText_taxiItem"
            android:text="[DateTime]" />

        <TextView
            android:id="@+id/remark_taxiItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateTime_taxiItem"
            android:layout_marginTop="9dp"
            android:text="Remark:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_taxiItem"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/remark_taxiItem"
            android:layout_alignBottom="@+id/remark_taxiItem"
            android:layout_alignStart="@+id/dateTimeText_taxiItem"
            android:text="message........................"
            android:textColor="#FF0000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/request_taxiItem"
            android:layout_width="153dp"
            android:layout_height="89dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/request" />
    </RelativeLayout>

</android.support.v7.widget.CardView>